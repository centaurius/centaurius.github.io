<script type="text/python">
from browser import document as doc
from browser import alert

def echo(*args):
    alert("Hello %s !" %doc["zone"].value)

doc["test"].bind("click", echo)
</script>


<p><p>Your name is: <input id="zone"><button id="test">click!</button>
</body></p>

